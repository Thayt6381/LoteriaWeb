@model LoteriaWeb.Models.Aposta

@{
    ViewData["Title"] = "Excluir Aposta";
}

<h2 class="mt-4 mb-3 text-danger">Confirmar Exclusão</h2>

<div class="alert alert-warning shadow-sm">
    Tem certeza que deseja excluir esta aposta?
</div>

<div class="mb-4">
    <dl class="row">
        <dt class="col-sm-3 fw-semibold">Nome do Jogador:</dt>
        <dd class="col-sm-9">@Model.NomeJogador</dd>

        <dt class="col-sm-3 fw-semibold">Números Selecionados:</dt>
        <dd class="col-sm-9">
            @foreach (var numero in Model.NumerosSelecionados.Split(','))
            {
                <span class="badge bg-danger text-white rounded-circle mx-1"
                      style="width: 35px; height: 35px; display: inline-flex; justify-content: center; align-items: center;">
                    @numero.PadLeft(2, '0')
                </span>
            }
        </dd>

        <dt class="col-sm-3 fw-semibold">Data da Aposta:</dt>
        <dd class="col-sm-9">@Model.DataAposta.ToString("dd/MM/yyyy HH:mm")</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger fw-semibold">Sim, excluir</button>
    <a asp-action="Index" class="btn btn-secondary ms-2 fw-semibold">Cancelar</a>
</form>

