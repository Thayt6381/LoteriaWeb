@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LOTTERA</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

    <style>
        body {
            background-color: #1b1b1b;
            color: #f5f5f5;
            font-family: 'Segoe UI', sans-serif;
        }

        .navbar {
            background-color: #222;
            border-bottom: 2px solid #D4AF37;
        }

        .navbar-brand,
        .nav-link {
            color: #D4AF37 !important;
            font-weight: 600;
        }

        .nav-link:hover {
            color: #ffffff !important;
        }

        h1, h2, h3, h4, h5, h6 {
            color: #D4AF37;
        }

        .btn-primary {
            background-color: #D4AF37;
            border-color: #D4AF37;
            color: #1b1b1b;
            font-weight: bold;
        }

        .btn-primary:hover {
            background-color: #bfa231;
            border-color: #bfa231;
        }

        .btn-danger {
            background-color: #8B0000;
            border-color: #8B0000;
            color: #fff;
        }

        .btn-danger:hover {
            background-color: #a30000;
            border-color: #a30000;
        }

        .table {
            background-color: #2a2a2a;
            color: #f5f5f5;
        }

        .table thead {
            background-color: #D4AF37;
            color: #1b1b1b;
        }

        .badge.bg-success {
            background-color: #D4AF37 !important;
            color: #1b1b1b;
            font-weight: bold;
        }

        footer {
            background-color: #222;
            color: #D4AF37;
            font-size: 0.9rem;
            padding: 1rem;
            text-align: center;
            border-top: 1px solid #D4AF37;
        }

        a {
            color: #D4AF37;
        }

        a:hover {
            color: #ffffff;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="/">LOTTERA</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">@Localizer["Início"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Apostas">@Localizer["Minhas Apostas"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Privacy">@Localizer["Privacidade"]</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer>
        &copy; 2025 - LOTTERA. @Localizer["Your luck, worldwide."]
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
